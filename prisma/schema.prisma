generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String @id @default(uuid())
  name       String
  avatar_url String
  email      String
  user_id    String

  @@map("users")
}

model Room {
  id          String @id @default(uuid())
  title       String
  description String
  price       String
  latitude    String
  longitude   String

  images Image[]
  @@map("rooms")
}

model Image {
  id   String @id @default(uuid())
  path String

  room    Room?  @relation(fields: [room_id], references: [id])
  room_id String
  @@map("image")
}
